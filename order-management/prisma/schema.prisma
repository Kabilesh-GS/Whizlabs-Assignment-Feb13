generator client {
  provider = "prisma-client"
  output   = "./generated"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  orders Order[]
}

model Product {
  id Int @id @default(autoincrement())
  name String @unique
  price Float
  stock Int
  orderItems OrderItems[]
}

model Order {
  id Int @id @default(autoincrement())
  user User @relation(fields: [userId], references: [id])
  userId Int
  orderItems OrderItems[]
  createdAt DateTime @default(now())
}

model OrderItems {
  id Int @id @default(autoincrement())
  order Order @relation(fields: [orderId], references: [id])
  orderId Int
  product Product @relation(fields: [productId], references: [id])
  productId Int
  quantity Int
}